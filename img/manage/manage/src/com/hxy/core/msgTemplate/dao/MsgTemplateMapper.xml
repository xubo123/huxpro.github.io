<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxy.core.msgTemplate.dao.MsgTemplateMapper">
	<insert id="save" parameterType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		insert into
		msg_template(msgTemplateTitle,msgTemplateContent,msgTemplateParamNumber)
		values(#{msgTemplateTitle},#{msgTemplateContent},#{msgTemplateParamNumber})
	</insert>
	<update id="update" parameterType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		update msg_template set
		msgTemplateTitle=#{msgTemplateTitle},
		msgTemplateContent=#{msgTemplateContent},msgTemplateParamNumber=#{msgTemplateParamNumber}
		where msgTemplateId=#{msgTemplateId}
	</update>
	<delete id="delete" parameterType="list">
		delete from msg_template where msgTemplateId in
		<foreach collection="list" open="(" separator="," close=")"
			item="ids">
			#{ids}
		</foreach>
	</delete>
	<select id="selectAll" resultType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		select * from
		msg_template
	</select>
	<select id="selectList" parameterType="map"
		resultType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		select * from msg_template
		<where>
			<if test="msgTemplateTitle!=null and msgTemplateTitle!=''">
				msgTemplateTitle like
				concat('%',#{msgTemplateTitle},'%')
			</if>
		</where>
		limit #{start},#{rows}
	</select>
	<select id="count" resultType="long">
		select count(msgTemplateId) from msg_template
		<where>
			<if test="msgTemplateTitle!=null and msgTemplateTitle!=''">
				msgTemplateTitle like
				concat('%',#{msgTemplateTitle},'%')
			</if>
		</where>
	</select>
	<select id="selectByTitle" parameterType="com.hxy.core.msgTemplate.entity.MsgTemplate" resultType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		select * from msg_template 
		<where>
			<if test="msgTemplateTitle!=null and msgTemplateTitle!=''">
				msgTemplateTitle=#{msgTemplateTitle}
			</if>
			<if test="msgTemplateId!=0">
				and msgTemplateId!=#{msgTemplateId}
			</if>
		</where>
	</select>
	<select id="selectById" parameterType="long" resultType="com.hxy.core.msgTemplate.entity.MsgTemplate">
		select * from msg_template where msgTemplateId=#{msgTemplateId}
	</select>
</mapper>
    <!-- APP专业采集 -->
    <insert id="specialtyCollectionForApp" parameterType="com.hxy.core.majormng.entity.MajorMng">
    
    insert into 
    specialty_collection(
    
    schoolName, 
    facultyName, 
    gradeName, 
    className, 
    specialtyName, 
    accountNum, 
    createDate
    
    ) 
    
    values(
    
    #{schoolName}, 
    #{facultyName}, 
    #{gradeName}, 
    #{className}, 
    #{specialtyName}, 
    #{accountNum}, 
    now()
    
    )
    
    </insert>

    <select id="queryMajMng" parameterType="map" resultType="com.hxy.core.majormng.entity.MajorMng">
    	select * from specialty_collection
    			
			<where>
				<if test="specialtyName!=null and specialtyName!=''">
					and specialtyName like concat('%',#{specialtyName},'%')
				</if>
			</where>
			
			ORDER BY createDate DESC
		
		limit #{start},#{rows}
    </select>
    
    <select id="rowsForQueryMajMng" parameterType="map" resultType="long">
    	select count(id) AS numOfRows from specialty_collection
    			
			<where>
				<if test="specialtyName!=null and specialtyName!=''">
					and specialtyName like concat('%',#{specialtyName},'%')
				</if>
			</where>
			
    </select>


    <delete id="delMajMng" parameterType="list">
        delete from specialty_collection where id in
		<foreach collection="list" item="ids" open="(" separator="," close=")">
			#{ids}
		</foreach>
    </delete>
    
    
</mapper>
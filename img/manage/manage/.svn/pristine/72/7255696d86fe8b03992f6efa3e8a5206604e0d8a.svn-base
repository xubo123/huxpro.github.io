.ui-banner {
    height:200px;
    padding-top: 0;
}
.ui-banner > div {
    height: 100%;
    background-size: cover;
}
.ui-banner ~ h1 {
    padding: 10px 0;
    text-align: center;
}
/* 新闻详情 */
.news-show header,.news-show article,.news-show .related {
    padding: 0 10px;
}
.news-show h2 {
    margin: 0;
    font-size: 1.375em;
    padding: 15px 0 5px;
}
.news-show .meta {
    color: #666;
    height: 26px;
    line-height: 24px;
    border-bottom: 1px solid #ECEEF0;
    font-size: 0.8125em;
}
.news-show article {
    margin-top: 12px;
    font-size: 1.125em;
    line-height: 30px;
    text-align: justify;
}
.news-show article p {
    margin-bottom: 1em;
}
.news-show article img {
    max-width: 100%;
    height: auto;
    display: block;
}
.head{
    width: 100%;
    height: 32px;
    line-height: 32px;
    border-top: 2px solid #4998e7;
    border-bottom: 1px solid #e8e8e8;
}
.head h2{
    margin: 0;
    font-size: 1em;
    color: #317ecb;
    font-weight: normal;
    padding: 0;
}
.relatedlist li{
    width: 100%;
    text-align: left;
    height: 35px;
    line-height: 35px;
    border-bottom: 1px solid #eceef0;
    border-top: 1px solid #fff;
    overflow: hidden;
}
.relatedlist li a{
    font-size: 1em;
    color: #393939;
    text-decoration: none;
}
.news-show footer {
    background: #404A54;
    padding:10px 8px;
    font-size: 12px;
    color: #FFF;
}
.ui-tab-content {
    margin-top: 0;
}
.jz-item {
    text-align: center;
    margin: 10px 0;
}
body {
  margin: 0;
  background: #FBFBFB;
}
.header {
  width:100%;
  height:35px;
  line-height:35px;
  border-bottom: 1px solid #E4E4E4;
  background: #F7F7F8;
  padding:0;
  color:#eee;
  font-size:20px;
  text-align:center;
}
.header h1 {
  color:#7B7B7B;
  font-size: 20px;
  margin: 0;
  line-height: 35px;
}
.footer {
  width:100%;
  height:45px;
  line-height:45px;
  border-top: 1px solid #E4E4E4;
  background: #F7F7F8;
  padding:0;
  color:#eee;
  font-size:20px;
  text-align:center;
}
.footer a {
  text-decoration: none;
}
.btn-back {
  display: block;
  position: absolute;
  top: 7px;
  left: 10px;
  width: 30px;
  height: 30px;
  background-size: 100%;
  font-size: 30px;
  line-height: 30px;
  color: #A3A6AA;
}
.btn-post {
  display: block;
  position: absolute;
  top: 7px;
  right: 10px;
  height: 30px;
  padding: 0 10px;
  font-size: 12px;
  line-height: 30px;
  color: #FFF;
  background:#3bafda;
  border-radius: 5px;
}
.btn-post i {
  font-size: 16px;
}
.reply-input {
  width:100%;
  padding: 10px;
  overflow:auto;
}
.reply-input input {
  width: 100%;
  border: 1px solid #e3e4e8;
  border-radius: 3px;
  font-size: 12px;
  padding: 6px;
  line-height: 16px;
  -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  margin-bottom: 10px;
}
.reply-input textarea {
  width: 100%;
  min-height: 180px;
  border: 1px solid #e3e4e8;
  border-radius: 3px;
  padding: 6px;
  font-size: 12px;
  line-height: 16px;
  -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
  transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}
.reply-input textarea:focus,.reply-input input:focus {
  border-color: #66afe9 !important;
  outline: 0;
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, 0.6);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 8px rgba(102, 175, 233, 0.6);
}
.list {
  padding: 10px;
}
.list h3 {
  font-size: 14px;
  line-height: 21px;
  margin: 0;
  margin-bottom: 10px;
  color: #181818;
}
.list .post-content {
  margin-bottom: 20px;
}
.list .detail {
  font-size: 12px;
  line-height: 18px;
  color: #7B7B7B
}
.list .post,.list .reply {
  position: relative;
  background: #FFF;
  padding: 10px;
}
.list .post {
  padding-left: 84px;
}
.list .user-info {
  position: absolute;
  top: 15px;
  left: 10px;
}
.list .avatar img {
  width: 64px;
  height: 64px;
  border-radius: 100%;
}
.list .post-time, .list .reply-time {
  font-size: 12px;
  line-height: 20px;
  color: #7B7B7B;
  text-align: right;
}
.list .reply-time {
  text-align: left;
}
.list .reply {
  background: #F5F5F5;
}
.reply h3, .reply .detail {
  /*margin-right: 84px;*//* 隐藏管理员logo */
}
.list .master-info {
  display: none;/* 隐藏管理员logo */
  position: absolute;
  top: 15px;
  right: 10px;
}
.list .no-reply {
  width: 100%;
  font-size: 12px;
  color: #999;
  text-align: center;
  padding: 20px;
}
.nodata {
  width: 100%;
  font-size: 12px;
  color: #999;
  text-align: center;
  margin-top: 50%;
}
.loading-icon {
  font-size: 12px;
  text-align: center;
  color: #999;
  margin-top: 50%;
}
.loading-icon i {
  display: block;
  font-size: 32px;
  margin-bottom: 5px;
}
.animate-spin { -webkit-animation: spin 1.5s infinite linear; animation: spin 1.5s infinite linear; display: inline-block }
@-webkit-keyframes spin {
  0% { -moz-transform: rotate(0deg); -o-transform: rotate(0deg); -webkit-transform: rotate(0deg); transform: rotate(0deg) }
  100% { -moz-transform: rotate(360deg); -o-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg) }
}
@keyframes spin {
  0% { -moz-transform: rotate(0deg); -o-transform: rotate(0deg); -webkit-transform: rotate(0deg); transform: rotate(0deg) }
  100% { -moz-transform: rotate(360deg); -o-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg) }
}
.infinite {
  animation-iteration-count: infinite;
}

#wrapper,#posts {
  position: absolute;
  z-index: 1;
  top: 35px;
  bottom: 45px;
  left: 0;
  width: 100%;
  overflow: hidden;
}

#scroller {
  position: absolute;
  z-index: 1;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  width: 100%;
  -webkit-transform: translateZ(0);
  -moz-transform: translateZ(0);
  -ms-transform: translateZ(0);
  -o-transform: translateZ(0);
  transform: translateZ(0);
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  -webkit-text-size-adjust: none;
  -moz-text-size-adjust: none;
  -ms-text-size-adjust: none;
  -o-text-size-adjust: none;
  text-size-adjust: none;
}
#footer {
  position: absolute;
  z-index: 2;
  bottom: 0;
  left: 0;
}

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxy.core.dicttype.dao.DictTypeMapper">
	<resultMap type="com.hxy.core.dicttype.entity.DictType" id="dictTypeResultMap">
		<id column="dict_type_id" property="dictTypeId" />
		<result column="dict_type_name" property="dictTypeName" />
		<result column="dict_type_value" property="dictTypeValue" />
		<collection property="list" ofType="com.hxy.core.dict.entity.Dict">
			<id column="dict_id" property="dictId" />
			<result column="dict_name" property="dictName" />
		</collection>
	</resultMap>
	<insert id="addDictType" parameterType="com.hxy.core.dicttype.entity.DictType">
		insert into dict_type(dict_type_name,dict_type_value) values(#{dictTypeName},#{dictTypeValue})
	</insert>
	<select id="countDcitType" parameterType="map" resultType="long">
		select count(dict_type_id) from dict_type
		<where>
			<if test="dictTypeName!=null and dictTypeName!=''">
				dict_type_name like concat('%',#{dictTypeName},'%')
			</if>
		</where>
	</select>
	<select id="selectDictType" parameterType="map" resultMap="dictTypeResultMap">
		select dict_type_id,dict_type_name,dict_type_value from dict_type
		<where>
			<if test="dictTypeName!=null and dictTypeName!=''">
				dict_type_name like concat('%',#{dictTypeName},'%')
			</if>
		</where>
		limit #{start},#{rows}
	</select>
	<select id="selectById" resultMap="dictTypeResultMap" parameterType="int">
		select dict_type_id,dict_type_name,dict_type_value from dict_type where dict_type_id=#{id}
	</select>
	<update id="updateDictType" parameterType="com.hxy.core.dicttype.entity.DictType">
		update dict_type set dict_type_name=#{dictTypeName},dict_type_value=#{dictTypeValue} where dict_type_id=#{dictTypeId}
	</update>
	<delete id="deleteDictType" parameterType="long">
		delete from dict_type where dict_type_id =#{id}
	</delete>
	<select id="selectAll" resultMap="dictTypeResultMap">
		select dt.*,d.* from dict_type dt left join dict d on dt.dict_type_id=d.dict_type_id
	</select>
</mapper>
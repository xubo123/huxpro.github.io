<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxy.core.userProfile.dao.GroupInfoMapper">
	<resultMap type="com.hxy.core.userProfile.entity.GroupInfoEntity"
		id="groupInfoResultMap">
		<id column="groupId" property="groupId" />
		<result column="description" property="description" />
		<result column="subject" property="subject" />
		<result column="groupName" property="groupName" />
		<result column="createrAccount" property="createrAccount" />
		<result column="adminsAccount" property="adminsAccount" />
		<result column="membersAccount" property="membersAccount" />
	</resultMap>

	<!-- 根据群ID查询群内详细信息 -->
	<select id="selectGroupByGroupId" parameterType="string"
		resultMap="groupInfoResultMap">
		select * from groupInfo where groupId = #{groupId}
	</select>


	<select id="selectByGroupId" parameterType="list" resultMap="groupInfoResultMap">
		select * from groupInfo where groupId in
		<foreach collection="list" open="(" close=")" item="groupIdList"
			separator=",">
			#{groupIdList}
		</foreach>
	</select>
	<select id="countGroupInfoEntity" parameterType="map"
		resultType="long">
		select count(groupId) from groupInfo
		<where>
			<if test="groupId!=null and groupId!=''">
				groupId=#{groupId}
			</if>
		</where>
	</select>
	<insert id="save" parameterType="com.hxy.core.userProfile.entity.GroupInfoEntity">
		insert into
		groupInfo(groupId,description,subject,groupName,createrAccount,adminsAccount,membersAccount)
		values(#{groupId},#{description},#{subject},#{groupName},#{createrAccount},#{adminsAccount},#{membersAccount})
	</insert>
	<update id="update" parameterType="com.hxy.core.userProfile.entity.GroupInfoEntity">
		update groupInfo
		<set>
			<if test="adminsAccount!=null">
				adminsAccount=#{adminsAccount}
			</if>
			<if test="membersAccount!=null">
				,membersAccount=#{membersAccount}
			</if>
			<if test="groupName!=null and groupName!=''">
				,groupName=#{groupName}
			</if>
			<if test="description!=null">
				,description=#{description}
			</if>
			<if test="subject!=null">
				,subject=#{subject}
			</if>
		</set>
		where groupId=#{groupId}
	</update>
	<update id="updateMembersAccount" parameterType="com.hxy.core.userProfile.entity.GroupInfoEntity">
		update groupInfo set membersAccount=#{membersAccount} where groupId=#{groupId}
	</update>
	<update id="updateAdminsAccount" parameterType="com.hxy.core.userProfile.entity.GroupInfoEntity">
		update groupInfo set adminsAccount=#{adminsAccount} where groupId=#{groupId}
	</update>
	<delete id="deleteByGroupId" parameterType="list">
		delete from groupInfo where groupId in
		<foreach collection="list" open="(" close=")" item="groupIdList"
			separator=",">
			#{groupIdList}
		</foreach>
	</delete>
	<delete id="deleteById" parameterType="string">
		delete from groupInfo
		where groupId=#{groupId}
	</delete>
	<delete id="deleteByCreatorAccount" parameterType="string">
		delete from
		groupInfo where createrAccount=#{createrAccount}
	</delete>

	<!-- 根据accountNum查询用户所在的群组信息 -->
	<select id="selectGroupByAccountNum" parameterType="string"
		resultMap="groupInfoResultMap">
		select * from groupInfo
		where FIND_IN_SET(#{accountNum},membersAccount)
		or adminsAccount = #{accountNum}
		or createrAccount = #{accountNum}
	</select>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxy.core.contact.dao.ContactMapper">

    <resultMap type="com.hxy.core.contact.entity.Contact" id="contactResultMap">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="category" property="category"/>      
        <result column="accountNum" property="accountNum"/>
        <result column="userId" property="userId"/>
        <result column="createTime" property="createTime"/>
        <result column="replyContent" property="replyContent"/>
        <result column="replyUserId" property="replyUserId"/>
        <result column="replyTime" property="replyTime"/>
        <result column="status" property="status"/>
        <association column="replyUserId" property="user" javaType="com.hxy.core.user.entity.User">
			<id column="replyUserId" property="userId" />
			<result column="userName" property="userName" />
			<result column="telephone" property="telephone" />
		</association>
		<association column="accountNum" property="userProfile" javaType="com.hxy.core.userProfile.entity.UserProfile">
			<id column="accountNum" property="accountNum" />
			<result column="name" property="name" />
			<result column="phoneNum" property="phoneNum" />
			<result column="picture" property="picture" />
		</association>
    </resultMap>

    <select id="query" parameterType="map" resultMap="contactResultMap">
        select c.*,u.userName,u.telephone,up.name,up.phoneNum,up.picture
       	from contact c
       	left join user u on c.replyUserId=u.userId
       	left join userprofile up on c.accountNum=up.accountNum
        <where>
            <if test="category!=null and category!=''">
                and c.category = #{category}
            </if>
        </where>
        order by id desc
        limit #{start},#{rows}
    </select>

    <select id="count" parameterType="map" resultType="long">
        select count(c.id) from contact c
        <where>
            <if test="category!=null and category!=''">
                and c.category = #{category}
            </if>
        </where>
    </select>

    <select id="getById" parameterType="long" resultMap="contactResultMap">
        select c.*,u.userName,u.telephone,up.name,up.phoneNum,up.picture
        from contact c 
        left join user u on c.replyUserId=u.userId
       	left join userprofile up on c.accountNum=up.accountNum
       	where c.id=#{id}
    </select>

    <update id="reply" parameterType="com.hxy.core.contact.entity.Contact">
        update contact set 
        replyContent=#{replyContent},
        replyUserId=#{replyUserId},
        replyTime=now()
        where id=#{id}
    </update>

    <delete id="delete" parameterType="list">
        update contact set status=2 where id in
		<foreach collection="list" item="ids" open="(" separator="," close=")">
			#{ids}
		</foreach>
    </delete>
</mapper>